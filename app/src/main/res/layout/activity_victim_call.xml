<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VictimCallActivity">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Localisation"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/locationInfos"
                android:textSize="36sp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>
        <TextView
                android:text="Localisation infos"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationInfos"
                android:background="@drawable/border"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location"
                app:layout_constraintBottom_toTopOf="@id/call"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
        <TextView
                android:text="Appeler"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/call"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationInfos"
                app:layout_constraintBottom_toTopOf="@id/rescue"
                android:textSize="36sp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>
        <Button
                android:text="SECOURS"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintDimensionRatio="H,1:1"
                android:id="@+id/rescue"
                app:backgroundTint="@null"
                android:background="@drawable/red_button"
                android:drawableTop="@drawable/ic_baseline_phone_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/call"
                android:textSize="36sp"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:paddingHorizontal="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>